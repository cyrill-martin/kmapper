  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags site: "kmapper" %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="container">
        <header id="header">

          <% if @show_kmapper %>
            <div id="logo_container">
                <%= link_to(image_tag("kmapper_k_3b.png", class: "logo_header"), root_path) %>
            </div>
          <% end %>
          <div id="menu_container">

            <div class="nav-container">
              <nav>
                <ul class="nav-list">

                  <% if @show_info %>
                    <li>
                      <a id="introStart">?</a>
                    </li>
                  <% end %>

                  <% if @show_share %>
                    <li>
                      <a>Share</a>
                      <ul class="nav-dropdown">
                        <li>
                          <a href="http://twitter.com/share?url=<%=request.original_url.gsub("+", "%2B")%>&hashtags=kmapper" target="_blank">Twitter</a>
                        </li>
                        <li>
                          <a href="http://www.linkedin.com/shareArticle?mini=true&url=<%=request.original_url
                            .gsub("+", "%2B")
                            .gsub("/","%2F")
                            .gsub(":", "%3A")
                            .gsub("?", "%3F")
                            .gsub("=", "%3D")%>" target="_blank">LinkedIn</a>
                        </li>
                        <li>
                          <a href="mailto:?subject=kmapper&body=<%=request.original_url.gsub("+", "%2B")%>">E-Mail</a>
                        </li>
                      </ul>
                    </li>
                  <% end %>

                  <% if @show_download %>
                    <li>
                      <a>Download</a>
                      <ul class="nav-dropdown">
                        <li>
                          <a id="download_all">All articles</a>
                        </li>
                        <li>
                          <a id="download_visible">Visible articles</a>
                        </li>
                      </ul>
                    </li>
                  <% end %>

                  <% if @show_about %>
                    <li>
                      <%= link_to "About", about_path %>
                    </li>
                  <% end %>

                </ul>
              </nav>
            </div>
          </div>

          <% if @show_header_search %>
            <div class="header_search" data-step="1" data-intro="Your search query was sent to the DOAJ's article search.">
              <div class="search">
                <%= form_tag("/doaj", method: "get") do %>
                  <%= label_tag(:q, "") %>
                  <%= text_field_tag(:q, params[:q], placeholder: "Search DOAJ") %>
                  <%= submit_tag("Search", name: "") %>
                <% end %>
              </div>
            </div>
          <% end %>
        </header>
        <div id="main">
            <%= yield %>
        </div>
        <footer id="footer">
        </footer>
    </div>
    <%= javascript_pack_tag "cookieconsent", "data-cfasync": "false"%>
    <script>
    window.cookieconsent.initialise({
      "palette": {
        "popup": {
          "background": "#edeff5",
          "text": "#838391"
        },
        "button": {
          "background": "#4b81e8"
        }
      },
      "position": "bottom-right",
      "content": {
        "message": "This website uses cookies."
      }
    });
    </script>
  </body>
