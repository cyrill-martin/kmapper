  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags site: "kmapper" %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="container">
        <header id="header">

          <% if @show_kmapper %>
            <div id="logo_container">
                <%= link_to(image_tag("kmapper_k.png", class: "logo_header"), root_path) %>
            </div>
          <% end %>

          <div id="menu_container">
            <% if @show_download %>
                <a class="dropbtn">Download</a>
                <div class="dropdown-content">
                  <div><a id="downloadAll">• All articles</a></div>
                  <div><a id="downloadVisible">• Visible articles</a></div>
                  <div><a id="downloadKmap">• kmap data</a></div>
                </div>
            <% end %>

            <% if @show_about %>
              <%= link_to "About", about_path %>
            <% end %> 

          </div>

          <% if @show_header_search %>
            <div class="header_search">
              <div class="search">
                <%= form_tag("/doaj", method: "get") do %>
                  <%= label_tag(:q, "") %>
                  <%= text_field_tag(:q, params[:q], placeholder: "Search DOAJ") %>
                  <%= submit_tag("Search", name: "") %>
                <% end %>
              </div>
            </div>
          <% end %>

        </header>
        <div id="main">
            <%= yield %>
        </div>
        <footer id="footer">
        </footer>
    </div>
    <%= javascript_pack_tag "cookieconsent", "data-cfasync": "false"%>
    <script>
    window.cookieconsent.initialise({
      "palette": {
        "popup": {
          "background": "#edeff5",
          "text": "#838391"
        },
        "button": {
          "background": "#4b81e8"
        }
      },
      "position": "bottom-right",
      "content": {
        "message": "This website uses cookies."
      }
    });
    </script>
  </body>
</html>
